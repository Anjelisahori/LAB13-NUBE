<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= accion === 'crear' ? 'Nuevo Contacto' : 'Editar Contacto' %> - Agenda AWS</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
  <style>
    .card-header {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      color: white;
    }
    .preview-img {
      max-width: 200px;
      max-height: 200px;
      object-fit: cover;
      border-radius: 10px;
      margin-top: 10px;
    }
  </style>
</head>
<body class="bg-light">
  <nav class="navbar navbar-dark bg-dark mb-4">
    <div class="container-fluid">
      <a href="/" class="navbar-brand mb-0 h1">
        <i class="bi bi-journal-bookmark-fill"></i> Agenda de Contactos AWS
      </a>
    </div>
  </nav>

  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-8">
        <div class="card shadow">
          <div class="card-header">
            <h4 class="mb-0">
              <i class="bi <%= accion === 'crear' ? 'bi-plus-circle' : 'bi-pencil' %>"></i>
              <%= accion === 'crear' ? 'Nuevo Contacto' : 'Editar Contacto' %>
            </h4>
          </div>
          <div class="card-body">
            <form 
              action="<%= accion === 'crear' ? '/contactos' : `/contactos/${contacto.id}?_method=PUT` %>" 
              method="POST" 
              enctype="multipart/form-data">
              
              <!-- Nombre -->
              <div class="mb-3">
                <label for="nombre" class="form-label">
                  <i class="bi bi-person"></i> Nombre *
                </label>
                <input 
                  type="text" 
                  class="form-control" 
                  id="nombre" 
                  name="nombre" 
                  value="<%= contacto ? contacto.nombre : '' %>" 
                  required 
                  placeholder="Ejemplo: Juan">
              </div>

              <!-- Apellidos -->
              <div class="mb-3">
                <label for="apellidos" class="form-label">
                  <i class="bi bi-person-badge"></i> Apellidos *
                </label>
                <input 
                  type="text" 
                  class="form-control" 
                  id="apellidos" 
                  name="apellidos" 
                  value="<%= contacto ? contacto.apellidos : '' %>" 
                  required 
                  placeholder="Ejemplo: Pérez García">
              </div>

              <!-- Correo -->
              <div class="mb-3">
                <label for="correo" class="form-label">
                  <i class="bi bi-envelope"></i> Correo Electrónico *
                </label>
                <input 
                  type="email" 
                  class="form-control" 
                  id="correo" 
                  name="correo" 
                  value="<%= contacto ? contacto.correo : '' %>" 
                  required 
                  placeholder="ejemplo@correo.com">
              </div>

              <!-- Fecha de Nacimiento -->
              <div class="mb-3">
                <label for="fecha_nac" class="form-label">
                  <i class="bi bi-calendar-event"></i> Fecha de Nacimiento *
                </label>
                <input 
                  type="date" 
                  class="form-control" 
                  id="fecha_nac" 
                  name="fecha_nac" 
                  value="<%= contacto ? new Date(contacto.fecha_nac).toISOString().split('T')[0] : '' %>" 
                  required>
              </div>

              <!-- Foto -->
              <div class="mb-3">
                <label for="foto" class="form-label">
                  <i class="bi bi-camera"></i> Foto de Perfil
                </label>
                <input 
                  type="file" 
                  class="form-control" 
                  id="foto" 
                  name="foto" 
                  accept="image/*"
                  onchange="previewImage(event)">
                <small class="text-muted">Formatos: JPG, PNG, GIF. Máximo 5MB</small>
                
                <!-- Preview de imagen -->
                <% if (contacto && contacto.foto_url) { %>
                  <div class="mt-2">
                    <p class="mb-1"><strong>Foto actual:</strong></p>
                    <img src="<%= contacto.foto_url %>" alt="Foto actual" class="preview-img" id="preview-actual">
                  </div>
                <% } %>
                <div id="preview-container" style="display: none;">
                  <p class="mb-1 mt-2"><strong>Nueva foto:</strong></p>
                  <img id="preview-nueva" src="" alt="Preview" class="preview-img">
                </div>
              </div>

              <!-- Botones -->
              <div class="d-flex justify-content-between">
                <a href="/" class="btn btn-secondary">
                  <i class="bi bi-arrow-left"></i> Cancelar
                </a>
                <button type="submit" class="btn btn-primary">
                  <i class="bi bi-save"></i> 
                  <%= accion === 'crear' ? 'Guardar Contacto' : 'Actualizar Contacto' %>
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    function previewImage(event) {
      const file = event.target.files[0];
      if (file) {
        const reader = new FileReader();
        reader.onload = function(e) {
          const preview = document.getElementById('preview-nueva');
          const container = document.getElementById('preview-container');
          preview.src = e.target.result;
          container.style.display = 'block';
        }
        reader.readAsDataURL(file);
      }
    }
  </script>
</body>
</html>